	  htm:'<a href="/news/article/_Remembering_Maria_do_Carmo"><p class="artc_txt" onmouseover="ResetTimer();"><span class="artc_ttl">Remembering Maria do Carmo Medina</span><br><span class="artc_subttl">7 December 1925 - 10 February 2014</span><br>Luanda, Angola, 10 February 2014</p></a>' , 
	  lnk:'/news/article/_Remembering_Maria_do_Carmo'
	},
	{ img:'news,llm,2.jpg' , 
	  htm:'<a href="/news/article/_Master_Opening"><p class="artc_txt" onmouseover="ResetTimer();"><span class="artc_ttl">Opening Ceremony of the Master of Laws in International Crime and Justice </span><span class="artc_subttl"></span><br>Turin, 3 February 2014</p></a>' , 
	  lnk:'/news/article/_Master_Opening'
	},
	{ img:'topics,counterfeiting,1.jpg' , 
	  htm:'<a href="/news/article/2014-01-29_Actions_against_counterfeit_medicines"><p class="artc_txt" onmouseover="ResetTimer();"><span class="artc_ttl">Actions against counterfeit medicines </span><br><span class="artc_subttl">A conference to discuss organized crime involvement and prevention strategies</span><br>Turin, 29 January 2014</p></a>' , 
	  lnk:'/news/article/2014-01-29_Actions_against_counterfeit_medicines'
	},{} ); 


	$(document).ready( RotateNews_Next );
	
	var intvl = window.setInterval( RotateNews_Next, 5000 );
	var ths_newsartc=-1;
	
	function RotateNews_Next(){
		ths_newsartc+=1; ths_newsartc%=5;
		SwitchNews( ths_newsartc );
	}
	
	function RotateNews_Prev(){
		ths_newsartc+=5; ths_newsartc-=1; ths_newsartc%=5;
		SwitchNews( ths_newsartc );
	}
	
	function SwitchNews( i ){
		if(typeof oldi=='undefined'){ oldi=1; }
		ths_newsartc = i;
		
		$('#newsbox').css( 'background', 'url(/gfx/news/'+artcs[i].img+') center' );
		$('#artcbox').html( artcs[i].htm );
		
		bullindex='&nbsp;';
		for(a=0;a<5;a++){
			bullindex += '<span style=\"color: '+((a==i)?'white':'grey')+';\" onclick=\"ResetTimer(); SwitchNews('+a+');\">&bull;</span>&nbsp;';
		}
		$('#news_bullindex').html( bullindex );
	}
	
	function ResetTimer(){
		window.clearInterval(intvl);
		intvl = window.setInterval( RotateNews_Next, 5000 );
	}
	
	function GotoNewspage(){
		window.location.href=artcs[ths_newsartc].lnk; 
	}

	 </script>
