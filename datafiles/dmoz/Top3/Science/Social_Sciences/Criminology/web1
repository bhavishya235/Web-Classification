<script type="text/javascript">
// <![CDATA[
 //탭//


var tabCount = 5;

function viewTab( num )
{
 for( var i = 1 ; i <= tabCount ; i++ )
 {
  if( i == num )
  {
document.getElementById("tabList"+i).style.display = "block";
document.getElementById("tabImg"+i).src = "img/btn/tab"+i+"_on.gif";
  }
  else
  {
  document.getElementById("tabList"+i).style.display = "none";
document.getElementById("tabImg"+i).src = "img/btn/tab"+i+"_off.gif";
  }
 }
}
//팝업존//
var popCount = 5;

function viewPop( num )
{
	var delay = 3000;

 for( var i = 1 ; i <= popCount ; i++ )
 {
  if( i == num )
  {
document.getElementById("pop"+i).style.display = "block";
document.getElementById("popImg"+i).src = "img/btn/pop"+i+"_on.gif";
  }
  else
  {
  document.getElementById("pop"+i).style.display = "none";
document.getElementById("popImg"+i).src = "img/btn/pop"+i+"_off.gif";
  }
 }
}


// ]]>

 // 유관기관 2010-11-18 by 박종범
 function link_pop(url){
        window.open(url);
    }



function popct(url, w, h) {
	popw = screen.width - 413;
	poph = 100;
	popft = 'height=' + h + ',width=' + w + ',top=' + poph + ',left=' + popw;
	window.open(url, '', popft);
}

