<script type='text/javascript'>
//<![CDATA[

	function pst(){
		clearInterval(st);
		st = setInterval('popUpSlider()',3000)
	}

	function popUpSlider(){
		popUp_No++;
		if (popUp_No > popUp_totalCnt || popUp_No < 0){ popUp_No = 1; }
		
		if (popUp_No == 1){
			document.all.popUp1.onmouseover();
		}
		
		if (popUp_No == 2){
			document.all.popUp2.onmouseover();
		}
		
		if (popUp_No == 3){
			document.all.popUp3.onmouseover();
		}
		
		if (popUp_No == 4){
			document.all.popUp4.onmouseover();
		}
		
		if (popUp_No == 5){
			document.all.popUp5.onmouseover();
		}
		
		if (popUp_No == 6){
			document.all.popUp6.onmouseover();
		}
		
		if (popUp_No == 7){
			document.all.popUp7.onmouseover();
		}
		
		if (popUp_No == 8){
			document.all.popUp8.onmouseover();
		}
		
		if (popUp_No == 9){
			document.all.popUp9.onmouseover();
		}
		
		imgon(popUp_No);
		//st = setTimeout("popUpSlider()",3000);
	}

	function imgon(a){
		popUp_No = a;
		//clearTimeout(st);
		
			document.getElementById("popUp1").src = "/img/main/pop/pop_1_off.jpg";
		
			document.getElementById("popUp2").src = "/img/main/pop/pop_2_off.jpg";
		
			document.getElementById("popUp3").src = "/img/main/pop/pop_3_off.jpg";
		
			document.getElementById("popUp4").src = "/img/main/pop/pop_4_off.jpg";
		
			document.getElementById("popUp5").src = "/img/main/pop/pop_5_off.jpg";
		
			document.getElementById("popUp6").src = "/img/main/pop/pop_6_off.jpg";
		
			document.getElementById("popUp7").src = "/img/main/pop/pop_7_off.jpg";
		
			document.getElementById("popUp8").src = "/img/main/pop/pop_8_off.jpg";
		
			document.getElementById("popUp9").src = "/img/main/pop/pop_9_off.jpg";
		
		document.getElementById("popUp"+a).src = "/img/main/pop/pop_"+a+"_on.jpg";
		PopUpZoneFunc(a-1);
	}

	function PopUpZoneFunc(b){
		document.getElementById("PopupZoneImage").innerHTML = "<img src='" + imgsrc[b] + "' alt='" + sub[b] + "' width='240' height='115' style='border:0px' onmouseover='clearInterval(st);this.style.cursor=\"hand\";' onmouseout='pst();' onclick='ul("+b+");' />";
	}

	pst();
//]]>
</script>


