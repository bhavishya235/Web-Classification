<!-- script for top menu to hide show sub menus-->
<script type="text/javascript"> 
$(document).ready(function(){

	$("ul.subnav").parent().append("<span></span>"); //Only shows drop down trigger when js is enabled - Adds empty span tag after ul.subnav
	
	$("ul.topnav li span").click(function() { //When trigger is clicked...
		
		//Following events are applied to the subnav itself (moving subnav up and down)
		$(this).parent().find("ul.subnav").slideDown('fast').show(); //Drop down the subnav on click

		$(this).parent().hover(function() {
		}, function(){	
			$(this).parent().find("ul.subnav").slideUp('slow'); //When the mouse hovers out of the subnav, move it back up
		});

		//Following events are applied to the trigger (Hover events for the trigger)
		}).hover(function() { 
			$(this).addClass("subhover"); //On hover over, add class "subhover"
		}, function(){	//On Hover Out
			$(this).removeClass("subhover"); //On hover out, remove class "subhover"
	});

});
</script>

<script>


	// this tells jquery to run the function below once the DOM is ready
	$(document).ready(function() {

		// choose text for the show/hide link - can contain HTML (e.g. an image)
		var showClass="showIcon";
		var hideClass="hideIcon";

		// initialise the visibility check
		var is_visible = false;

		// append show/hide links to the element directly preceding the element with a class of "toggle"
		$('.toggle').prev().wrap('<a href="#" class="toggleLink"/>');
		/*$('.toggle').prev().wrap(function() {
			return '<a href="#" class="toggleLink">' + $(this).text() + "showImg+'</a>";
		});*/
		//$('.toggle').prev().wrap.append('<a href="#" class="toggleLink">');
		//$('.toggle').prev().append(' showImg+'</a>');
	
		// hide all of the elements with a class of 'toggle'
		$('.toggle').hide();
		$('a.toggleLink').children('h2').addClass(showClass);
		$('a.toggleLink').children('h3').addClass(showClass);

		// capture clicks on the toggle links
		$('a.toggleLink').click(function() {

			// switch visibility
			if($(this).children('h2').hasClass(showClass)){
				$(this).children('h2').removeClass(showClass);
				$(this).children('h2').addClass(hideClass);
			}
			else{
				$(this).children('h2').removeClass(hideClass);
				$(this).children('h2').addClass(showClass);
			}
		// switch visibility
			if($(this).children('h3').hasClass(showClass)){
				$(this).children('h3').removeClass(showClass);
				$(this).children('h3').addClass(hideClass);
			}
			else{
				$(this).children('h3').removeClass(hideClass);
				$(this).children('h3').addClass(showClass);
			}
			// change the link depending on whether the element is shown or hidden
			//$(this).html( (!is_visible) ? showImg : hideImg);
			//$(this).children('img').html($(this).children('img').html()+((!is_visible) ? showImg : hideImg));

			// toggle the display - uncomment the next line for a basic "accordion" style
			//$('.toggle').hide();$('a.toggleLink').html(showText);
			$(this).next('.toggle').slideToggle('slow');

			// return false so any link destination is not followed
			return false;

		});
	});
</script> 
<script type="text/javascript" src="/T4-css-corporate/js/fancybox/jquery.fancybox-1.3.4.pack.js"></script>
