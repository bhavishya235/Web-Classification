<!-- Multi Domain Analytics Code v2-->
 	    <!-- Multi Domain GA Tracking START--> 
	    
	    <script type="text/javascript">
	    /* Dealing with multi domain hard coded links */
		    $(document).ready(function () {
	      
		    //get domain
		    var serverName = "www.brad.ac.uk";
		    var domain = "brad.ac.uk";
		    patt=/\.(bradford|brad)\.ac\.uk/;
		    subdomain="/SUB/"+serverName.replace(patt,'');
		    if(domain == "bradford.ac.uk"){
			    $('a[href*="brad.ac.uk"]').each(function(){
					    $(this).click(function () {
						    _gaq.push(['_link', this.href]); 
						    return true;
					    });
				    	
			    });
		    }
		    else if(domain =="brad.ac.uk"){
			    $('a[href*="bradford.ac.uk"]').each(function(){
					    $(this).click(function () {
						    _gaq.push(['_link', this.href]); 
						    return true;
					    });
				    
			    });
		    }
	      });
	    </script>
	    <script type="text/javascript">
		    /* Multi domain analytics custom code */
		    
		    var _gaq = _gaq || [];
		    
		    //14 code
		    _gaq.push(['a._setAccount', 'UA-18301055-14']);
		    _gaq.push(['a._setDomainName', 'bradford.ac.uk']);
		    _gaq.push(['a._trackPageview']);
		    
		    //25 code
