       o:allowoverlap="f">
       <v:imagedata src="mormon.jpe"/>
       <w:wrap type="square"/>
      </v:shape><![endif]--><![if !vml]><![endif]><b style='mso-bidi-font-weight:normal'><span
      style='font-size:13.5pt;font-family:Papyrus'><o:p></o:p></span></b></li>
