	var cookieNotificationCookie = $.cookie('cookieNotification');
	
	if (cookieNotificationCookie) {
		$('#cookieNotification').remove();
	} else {		
		var expiryDate = new Date();
		expiryDate.setTime(expiryDate.getTime() + (1 * 365 * 24 * 60 * 60 * 9999));

		$('#cookieNotification .close, body').click(function() {
			$('#cookieNotification').remove();
			$.cookie('cookieNotification', 'true', {expires: expiryDate, path: '/'});			
		});

		$('#cookieNotification').click(function(e){
			e.stopPropagation();
		})
	}
</script>

	
