var posts_total = tumblr_api_read['posts-total'];
for(var index = 0; index < posts_total; index++){
    // write thumbnail
	var photo = tumblr_api_read['posts'][index]['photo-url-75'];
	var url = tumblr_api_read['posts'][index]['url-with-slug'];
	jQuery('.tumbphotos').append('<a href="'+url+'"><span class="image-wrap" style="width: auto; height: auto;"><img border="0" src="'+photo+'" alt="" /></span></a>');
}
});
