<!-- TABS SCRIPT --> 
	<script type="text/javascript">
		$('ul.tabs').each(function(){
			var $active, $content, $dalinks = $(this).find('a');
		
			$active = $($dalinks.filter('[href="'+location.hash+'"]')[0] || $dalinks[0]);
			$active.addClass('active');
			$content = $($active.attr('href'));
		
			$dalinks.not($active).each(function () {
				$($(this).attr('href')).hide();
			});

			$(this).on('click', 'a', function(e){
				$active.removeClass('active');
				$content.hide();
				$active = $(this);
				$content = $($(this).attr('href'));
				$active.addClass('active');
				$content.show();
				e.preventDefault();
			});
		});
	</script>
<!-- END TABS SCRIPT --> 

<!-- START CONTENT -->
<div class="row">
